{
	"name": "Code - OSS",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"overrideCommand": false,
	"privileged": true,
	"mounts": [
		{
			"source": "vscode-dev",
			"target": "/vscode-dev",
			"type": "volume"
		}
	],
	"postCreateCommand": "./.devcontainer/post-create.sh",
	"customizations": {
		"vscode": {
			"settings": {
				"resmon.show.battery": false,
				"resmon.show.cpufreq": false
			},
			"extensions": [
				"mutantdino.resourcemonitor"
			]
		}
	},
	"hostRequirements": {
		"memory": "9gb"
	}
}
